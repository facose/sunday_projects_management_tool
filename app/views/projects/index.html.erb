<Section class="wrapper">

<br>

<div class="dashboard-head">
<h1>Projects Dashboard</h1>
<%= link_to 'Create New Project', new_project_path, :class => "btn btn-warning create mt-3" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project|%>
        <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.started_at %></td>
            <td><%= project.ended_at %></td>
            <td><%= project.status %></td>
            <td>
              <%= link_to(edit_project_path(project)) do%>
              <i class="fas fa-pen"></i>
              <% end %>
              <%= link_to(destroy_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }) do %>
              <i class="fas fa-trash"></i>
              <% end %>
            </td>
        </tr>
    <% end %>        
  </tbody>
</table>

<!-- Mobile Version -->

<% @projects.each do |project|%>
<div class="mobile-wrapper">
  <div class="card mobile" style="width: 22rem;">
    <div class="card-body pl-5">
      <h5 class="card-title"><%= project.name %></h5>
      <p class="card-text"><%= project.description %></p>
      <p><%= project.status %></p>
      <%= link_to(edit_project_path(project)) do%>
        <i class="fas fa-pen"></i>
        <% end %>
        <%= link_to(destroy_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }) do %>
        <i class="fas fa-trash"></i>
        <% end %>
    </div>
  </div>
</div>
<% end %>   

</section>
